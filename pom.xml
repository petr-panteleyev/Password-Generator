<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.panteleyev</groupId>
    <artifactId>password-generator</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>9</maven.compiler.source>
        <maven.compiler.target>9</maven.compiler.target>
        <app.main.class>org.panteleyev.passwdgen.PasswordGeneratorApplication</app.main.class>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>6.11</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.0.2</version>
                <configuration>
                    <outputDirectory>target/jmods</outputDirectory>
                    <archive>
                        <manifestEntries>
                            <Main-Class>${app.main.class}</Main-Class>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.5.0</version>
                <executions>
                    <execution>
                        <id>dist-win</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>
                                ${env.JAVA_HOME}/bin/javapackager
                            </executable>
                            <arguments>
                                <argument>-deploy</argument>
                                <argument>-native</argument>
                                <argument>exe</argument>
                                <argument>-name</argument>
                                <argument>Password Generator</argument>
                                <argument>-outdir</argument>
                                <argument>target/dists</argument>
                                <argument>-outfile</argument>
                                <argument>Password Generator</argument>
                                <argument>-Bicon=icons/icons.ico</argument>
                                <argument>-BappVersion=${project.version}</argument>
                                <argument>-BsystemWide=true</argument>
                                <argument>-Bcopyright=Copyright (c) 2010, 2017, Petr Panteleyev</argument>
                                <argument>-Bvendor=Petr Panteleyev</argument>
                                <argument>-Bwin.menuGroup=Petr Panteleyev</argument>
                                <argument>--module-path</argument>
                                <argument>target/jmods</argument>
                                <argument>--module</argument>
                                <argument>password.generator/${app.main.class}</argument>
                                <argument>-v</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>dist-mac</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>
                                ${env.JAVA_HOME}/bin/javapackager
                            </executable>
                            <arguments>
                                <argument>-deploy</argument>
                                <argument>-native</argument>
                                <argument>dmg</argument>
                                <argument>-name</argument>
                                <argument>Password Generator</argument>
                                <argument>-outdir</argument>
                                <argument>target/dists</argument>
                                <argument>-outfile</argument>
                                <argument>Password Generator</argument>
                                <argument>-Bicon=icons/icons.icns</argument>
                                <argument>-BappVersion=${project.version}</argument>
                                <argument>--module-path</argument>
                                <argument>target/jmods</argument>
                                <argument>--module</argument>
                                <argument>password.generator/${app.main.class}</argument>
                                <argument>-v</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>dist-rpm</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>
                                ${env.JAVA_HOME}/bin/javapackager
                            </executable>
                            <arguments>
                                <argument>-deploy</argument>
                                <argument>-native</argument>
                                <argument>rpm</argument>
                                <argument>-name</argument>
                                <argument>Password Generator</argument>
                                <argument>-outdir</argument>
                                <argument>target/dists</argument>
                                <argument>-outfile</argument>
                                <argument>Password Generator</argument>
                                <argument>-Bicon=icons/icon.png</argument>
                                <argument>-BappVersion=${project.version}</argument>
                                <argument>-BsystemWide=true</argument>
                                <argument>-Bcopyright=Copyright (c) 2017, Petr Panteleyev</argument>
                                <argument>-Bvendor=Petr Panteleyev</argument>
                                <argument>-Bcategory=Utility</argument>
                                <argument>-Bemail=petr@panteleyev.org</argument>
                                <argument>-BlicenseType=BSD</argument>
                                <argument>--module-path</argument>
                                <argument>target/jmods</argument>
                                <argument>--module</argument>
                                <argument>password.generator/${app.main.class}</argument>
                                <argument>-v</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
